<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/daily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_header"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:visibility="visible">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/left_arrow"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:tint="@color/foreground_header"
            android:tintMode="src_atop"
            app:srcCompat="@drawable/ic_navigate_before_black_24dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="DateGoesHere"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="@color/foreground_header"
            tools:text="25 d'agostu de 2017" />

        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:tint="@color/foreground_header"
            android:tintMode="src_atop"
            app:srcCompat="@drawable/ic_navigate_next_black_24dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_header"
        android:paddingBottom="10dp"
        android:paddingTop="8dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leme"
            android:gravity="center"
            android:text="axetivu"
            android:textColor="@color/foreground_header"
            android:textStyle="italic" />

        <ImageButton
            android:id="@+id/favorite_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#00ffffff"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/favorite_unset"
            android:tint="@color/background_header_contrast" />

        <TextView
            android:id="@+id/leme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="guapu"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/foreground_header"
            android:transitionName="wordInEntry" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:tabBackground="?attr/colorPrimary"
            app:tabIndicatorColor="?attr/colorPrimaryDark"
            app:tabMaxWidth="0dp"
            app:tabSelectedTextColor="?attr/actionMenuTextColor">

        </android.support.design.widget.TabLayout>
    </FrameLayout>

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</LinearLayout>