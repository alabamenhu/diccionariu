<!-- The important thing to note here is the added fitSystemWindows -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Your normal content view -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/toolbar">
            </FrameLayout>

        <ListView
            android:id="@+id/search_suggestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/toolbar"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="#00000000"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:elevation="6dp"
            android:visibility="gone" />
        <!-- Toolbar goes down here so it's layered above -->

        <FrameLayout
            android:id="@+id/search_suggestions_blackout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#a0000000"
            android:visibility="gone">

        </FrameLayout>

        <include
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            layout="@layout/toolbar_main"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/toolbar" />

        <!-- The rest of your content view -->

    </RelativeLayout>

    <!-- Your drawer view. This can be any view, LinearLayout
         is just an example. As we have set fitSystemWindows=true
         this will be displayed under the status bar., height should be 304
         android:fitsSystemWindows="false", true = under bar-->
    <fragment
        android:id="@+id/navigation_drawer"
        android:name="org.softastur.asturiandictionary.drawer.NavigationDrawerFragment"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:layout="@layout/fragment_navigation_drawer" />


</android.support.v4.widget.DrawerLayout>