<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".FragmentSettings">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/preferences_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pref_override_language"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/foreground_secondary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_override_language_summary"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/foreground_secondary" />

        <RadioGroup
            android:id="@+id/radio_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_system"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pref_override_language_system"
                android:textColor="@color/foreground_primary" />

            <RadioButton
                android:id="@+id/radio_asturian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pref_override_language_asturian"
                android:textColor="@color/foreground_primary" />
        </RadioGroup>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TextView
            android:id="@+id/night_mode_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_nightmode"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/foreground_secondary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/night_mode_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_nightmode_summary"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/foreground_secondary" />

        <RadioGroup
            android:id="@+id/radio_nightmode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_system"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pref_nightmode_system"
                android:textColor="@color/foreground_primary" />

            <RadioButton
                android:id="@+id/radio_auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pref_nightmode_auto"
                android:textColor="@color/foreground_primary" />

            <RadioButton
                android:id="@+id/radio_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pref_nightmode_day"
                android:textColor="@color/foreground_primary" />

            <RadioButton
                android:id="@+id/radio_night"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pref_nightmode_night"
                android:textColor="@color/foreground_primary" />

        </RadioGroup>

    </LinearLayout>

</FrameLayout>
